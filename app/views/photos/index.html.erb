
<div class="page-header"><h1>Submissions</h1></div>

<% if current_user %>
<div class="media">
  <% i = 0 %>
  <% @photos.each do |photo| %>
    <div class="media-left">
      <% i += 1 %>
      <%= link_to "Download Submission " + i.to_s, photo.image.url(:original, false) %>
      <%= link_to "Destroy", photo, method: :delete, data: { confirm: 'Are you sure?' }  %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= photo.title %></h4>
    </div>
  <% end %>
</div>
<% elsif @assignment.course.admin == current_admin %>
<div class="media">
  <% @adminphotos.each do |photo| %>
    <div class="media-left">
      <%= link_to "Download Submission " + photo.user.email[0..photo.user.email.index('@')-1], photo.image.url(:original, false) %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= photo.title %></h4>
    </div>
  <% end %>
</div>
<% else %>
<p> Cannot view content </p>
<% end %>

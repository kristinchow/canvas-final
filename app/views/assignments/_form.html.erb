<%= form_for [course, assignment] do |f| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :points %>
    <%= f.text_field :points %>
  </div>

  <div class="field">
    <%= f.label :duedate %>
    <br>Format: yyyy-mm-dd hh:mm:ss</br>
    <%= f.text_field :duedate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
